{
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-config-security",
    "tslint-etc"
  ],
  "jsRules": true,
  "rules": {

    "strict-type-predicates": false,
    "tsr-detect-possible-timing-attacks": false,
    // types related rules

    "no-namespace": {
      "options": [
        "allow-declarations"
      ]
    },
    "interface-name": {
      "options": "never-prefix"
    },
    "no-unsafe-any": false,
    // core lint rules
    "ban": {
      "options": [
        {
          "name": "parseInt",
          "message": "use #type-coercion -> Number(val)"
        },
        {
          "name": "parseFloat",
          "message": "use #type-coercion -> Number(val)"
        },
        {
          "name": "Array",
          "message": "use #array-constructor"
        },
        {
          "name": [
            "describe",
            "only"
          ],
          "message": "don't focus spec blocks"
        },
        {
          "name": [
            "it",
            "only"
          ],
          "message": "don't focus tests"
        }
      ]
    },
    "no-magic-numbers": true,
    "no-require-imports": true,
    "no-boolean-literal-compare": false,
    "no-invalid-this": {
      "options": "check-function-in-method"
    },
    "no-invalid-template-strings": true,
    "prefer-template": true,
    "newline-before-return": true,
    "match-default-export-name": true,
    "no-parameter-reassignment": true,
    "file-name-casing": {
      "options": [
        "kebab-case"
      ]
    },
    "switch-default": true,
    // tslint:recommended overrides
    "no-any": false,
    "member-access": {
      "options": [
        "no-public"
      ]
    },
    "object-literal-sort-keys": false,
    "interface-over-type-literal": false,
    // tslint:tslint-config-standard overrides
    //
    // tslint-etc rules
    "no-unused-declaration": true,
    "no-dtslint-typo": true,
    "no-assign-mutated-array": true,
    // tslint-react rules

    "array-type": false,
    "arrow-parens": false,
    "deprecation": false,
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],

    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "only-arrow-functions":  false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": false,


    "no-non-null-assertion": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": false,

    "component-selector": false,
    "no-output-on-prefix": false,
    "curly": false,
    "no-redundant-jsdoc": false,
    "semicolon": [true, "never"],
    "no-inferrable-types": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "space-before-function-paren": [true, "always"],
    "no-shadowed-variable": false,
    "forin": false,
    "prefer-const": false,
    "no-unused-expression": false,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }

  }
}
